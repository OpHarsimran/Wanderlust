<% layout("/layouts/boilerplate") %>
<body>
<div class="row">
    <h1 class="col-6 offset-3 mt-3">Signup on Wanderlust</h1>

    <div class="col-6 offset-3 mt-3">

        <form method="post" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="enter name" class="form-control" required>  
                <div class="valid-feedback">Looks good!</div>  
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="enter email" class="form-control">  
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Password</label>
                <input type="password" name="password" placeholder="enter pass" class="form-control" required>  
                <div class="valid-feedback">looks good!</div>  
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>